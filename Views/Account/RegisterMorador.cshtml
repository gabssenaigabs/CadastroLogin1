@using GestaoCondominio.Models.ViewModels
@model RegisterMoradorViewModel
@{
    ViewData["Title"] = "Cadastro Morador";
}

<div class="auth-page d-flex align-items-center justify-content-center">
    <div class="auth-container text-center">
        <div class="logo-wrap mb-3">
            <div class="logo-icon">üè¢</div>
        </div>
        <h1 class="app-title">CondoHub</h1>
        <p class="app-subtitle">Gest√£o inteligente e conectada</p>

        <div class="auth-card mx-auto mt-4 text-start">
            <h5 class="card-title">Cadastro ‚Äî Morador</h5>
            <form asp-action="RegisterMorador" method="post" class="mt-3">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label visually-hidden">Nome</label>
                    <input asp-for="Nome" class="form-control form-control-lg" placeholder="Seu nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label visually-hidden">E-mail</label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="seu@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3 row">
                    <div class="col-6">
                        <label asp-for="CPF" class="form-label visually-hidden">CPF</label>
                        <input asp-for="CPF" class="form-control" placeholder="000.000.000-00" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Bloco" class="form-label visually-hidden">Bloco</label>
                        <input asp-for="Bloco" class="form-control" placeholder="Bloco" />
                        <span asp-validation-for="Bloco" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Telefone" class="form-label visually-hidden">Telefone</label>
                    <input asp-for="Telefone" class="form-control" placeholder="(11) 9xxxx-xxxx" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Senha" class="form-label visually-hidden">Senha</label>
                    <input asp-for="Senha" type="password" class="form-control form-control-lg" placeholder="Senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Cadastrar</button>
            </form>

            <div class="mt-3 text-center small">J√° tem uma conta? <a asp-controller="Account" asp-action="Login">Fazer login</a></div>
        </div>

        <div class="mt-4 text-muted small">¬© 2025 CondoHub. Todos os direitos reservados.</div>
    </div>
</div>