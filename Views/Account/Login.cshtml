@using GestaoCondominio.Models.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-page d-flex align-items-center justify-content-center">
    <div class="auth-container text-center">
        <div class="logo-wrap mb-3">
            <!-- simple app icon -->
            <div class="logo-icon">üè¢</div>
        </div>
        <h1 class="app-title">CondoHub</h1>
        <p class="app-subtitle">Gest√£o inteligente e conectada</p>

        <div class="auth-card mx-auto mt-4">
            <h5 class="card-title text-start">Bem-vindo</h5>
            <p class="text-muted text-start small">Entre com suas credenciais para continuar</p>

            <form asp-action="Login" method="post" class="mt-3">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label visually-hidden">E-mail</label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="seu@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Senha" class="form-label visually-hidden">Senha</label>
                    <input asp-for="Senha" type="password" class="form-control form-control-lg" placeholder="Senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Entrar</button>
            </form>

            <div class="mt-3 text-center small">
                N√£o tem uma conta? <a asp-controller="Account" asp-action="Register">Cadastre-se</a>
            </div>
        </div>

        <div class="mt-4 text-muted small">¬© 2025 CondoHub. Todos os direitos reservados.</div>
    </div>
</div>