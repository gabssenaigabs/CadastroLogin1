@model IEnumerable<GestaoCondominio.Models.Proprietario>
@{
    ViewData["Title"] = "Proprietários";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Proprietários</h3>
        @if (User.IsInRole("Gestor"))
        {
            <a class="btn btn-primary" asp-controller="Proprietarios" asp-action="Create">Cadastrar Proprietário</a>
        }
    </div>

    <div class="row g-3">
        @foreach(var p in Model)
        {
            <div class="col-md-6">
                <div class="management-card p-3">
                    <h5 class="mb-1">@p.Nome</h5>
                    <p class="text-muted mb-1">CPF: @p.CPF • Telefone: @p.Telefone</p>
                    <p class="small text-muted">Email: @p.Email</p>
                </div>
            </div>
        }
        @if(!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">Nenhum proprietário cadastrado.</div>
            </div>
        }
    </div>
</div>