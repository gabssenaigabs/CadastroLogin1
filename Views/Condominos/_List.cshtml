@model IEnumerable<GestaoCondominio.Models.Condomino>
<div class="row g-3 mt-3">
    @foreach(var c in Model)
    {
        <div class="col-md-6 condomino-item">
            <div class="management-card p-3">
                <h5 class="mb-1">@c.Nome</h5>
                <p class="text-muted mb-1">CPF: @c.CPF • Telefone: @c.Telefone</p>
                <p class="small text-muted">Imóvel: @(c.Imovel != null ? c.Imovel.Endereco : "-")</p>
            </div>
        </div>
    }
    @if(!Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-info">Nenhum condômino cadastrado.</div>
        </div>
    }
</div>