@model IEnumerable<GestaoCondominio.Models.Funcionario>
@{
    ViewData["Title"] = "Funcionários";
}

<div class="container mt-4">
    <h3>Funcionários</h3>
    <div class="row g-3 mt-3">
        @foreach(var f in Model)
        {
            <div class="col-md-6">
                <div class="management-card p-3">
                    <h5 class="mb-1">@f.Nome</h5>
                    <p class="text-muted mb-1">Cargo: @f.Cargo</p>
                    <p class="small text-muted">Telefone: @f.Telefone • Email: @f.Email</p>
                </div>
            </div>
        }
        @if(!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">Nenhum funcionário cadastrado.</div>
            </div>
        }
    </div>
</div>