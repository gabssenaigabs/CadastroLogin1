@model IEnumerable<GestaoCondominio.Models.Locatario>
@{
    ViewData["Title"] = "Locatários";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Locatários</h3>
        @if (User.IsInRole("Gestor"))
        {
            <a class="btn btn-primary" asp-controller="Locatarios" asp-action="Create">Cadastrar Locatário</a>
        }
    </div>

    <div id="locatarios-list-container">
        <partial name="_List" model="Model" />
    </div>
</div>