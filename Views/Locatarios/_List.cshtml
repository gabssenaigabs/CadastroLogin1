@model IEnumerable<GestaoCondominio.Models.Locatario>
<div class="row g-3 mt-3">
    @foreach(var l in Model)
    {
        <div class="col-md-6 locatario-item">
            <div class="management-card p-3">
                <h5 class="mb-1">@l.Nome</h5>
                <p class="text-muted mb-1">CPF: @l.CPF • Telefone: @l.Telefone</p>
                <p class="small text-muted">Imóvel: @(l.Imovel != null ? l.Imovel.Endereco : "-")</p>
            </div>
        </div>
    }
    @if(!Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-info">Nenhum locatário cadastrado.</div>
        </div>
    }
</div>