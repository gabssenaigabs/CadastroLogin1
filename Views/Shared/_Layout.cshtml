<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestaoCondominio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestaoCondominio.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GestaoCondominio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Gestor") || User.IsInRole("Sindico")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Management" asp-action="Index">Gestão</a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <div class="me-3 text-end">
                                <div class="fw-bold">@User.Identity.Name</div>
                                <div>
                                    @if (User.IsInRole("Gestor")) { <span class="badge bg-primary">Gestor</span>; }
                                    else if (User.IsInRole("Sindico")) { <span class="badge bg-info text-dark">Síndico</span>; }
                                    else if (User.IsInRole("Morador")) { <span class="badge bg-secondary">Morador</span>; }
                                </div>
                            </div>

                            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link text-danger">Sair</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GestaoCondominio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
